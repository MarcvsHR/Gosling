<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="493.0" prefWidth="770.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prodo.marc.gosling.controllers.HelloController">

    <Label fx:id="welcomeText" prefHeight="17.0" prefWidth="23.0" />
    <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
        <padding>
            <Insets left="20.0" right="20.0" top="10.0"/>
        </padding>
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <Button fx:id="songViewButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#showSongWindow"
                text="New window"/>
        <Button alignment="TOP_RIGHT" onAction="#onHelloButtonClick" text="Hello!"/>
    </HBox>


    <Label text="My Image">
        <graphic>
            <ImageView fitWidth="150" preserveRatio="true">
                <Image url="@../images/GoosNLings.jpg"/>
            </ImageView>
        </graphic>
    </Label>

</VBox>
